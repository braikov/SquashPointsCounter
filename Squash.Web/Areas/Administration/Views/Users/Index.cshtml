@model IReadOnlyList<UserListItemViewModel>

@{
    ViewData["Title"] = "Users";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <strong>Users</strong>
        <a class="btn btn-sm btn-primary" asp-area="Administration" asp-controller="Users" asp-action="Create">Add user</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Email</th>
                        <th>Date</th>
                        <th>Verified</th>
                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-body-secondary">No users found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var user in Model)
                        {
                            <tr>
                                <td>@user.Name</td>
                                <td>@user.Email</td>
                                <td>@(string.IsNullOrWhiteSpace(user.Date) ? "-" : user.Date)</td>
                                <td>@user.Verified</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-area="Administration" asp-controller="Users" asp-action="Details" asp-route-id="@user.Id">Details</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
