@model PlayersIndexViewModel

@{
    ViewData["Title"] = "Players";
    var hasFilter = !string.IsNullOrEmpty(Model.FilterCountry);
}

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <strong>Filters</strong>
        <div class="d-flex gap-2">
            <select id="countryFilter" class="form-select form-select-sm" style="width: auto;">
                <option value="">All Countries</option>
                @foreach (var opt in Model.AvailableCountries)
                {
                    <option value="@opt.Value" selected="@(Model.FilterCountry == opt.Value)">@opt.Text</option>
                }
            </select>
            @if (hasFilter)
            {
                <a class="btn btn-sm btn-outline-secondary"
                   asp-area="Administration"
                   asp-controller="Players"
                   asp-action="Index">
                    Clear
                </a>
            }
        </div>
    </div>
    <div class="card-body py-2">
        <div class="text-muted">
            @if (hasFilter)
            {
                <span>Showing @Model.FilteredCount of @Model.TotalCount players</span>
            }
            else
            {
                <span>Showing @Model.TotalCount players</span>
            }
        </div>
    </div>
</div>

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <strong>Players</strong>
        <a class="btn btn-sm btn-primary" asp-area="Administration" asp-controller="Players" asp-action="Create">Add player</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-striped align-middle">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Country</th>
                        <th>ESF Member Id</th>

                        <th class="text-end">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @if (Model.Players.Count == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center text-body-secondary">No players found.</td>
                        </tr>
                    }
                    else
                    {
                        foreach (var player in Model.Players)
                        {
                            <tr>
                                <td>@player.Name</td>
                                <td>
                                    <div class="d-flex align-items-center gap-2">
                                        @if (!string.IsNullOrWhiteSpace(player.FlagUrl))
                                        {
                                            <img src="@player.FlagUrl" alt="" width="22" height="16" />
                                        }
                                        <span>
                                            @if (!string.IsNullOrWhiteSpace(player.CountryCode))
                                            {
                                                @player.CountryCode.ToUpperInvariant()
                                            }
                                            @if (!string.IsNullOrWhiteSpace(player.CountryName))
                                            {
                                                <span class="text-muted">- @player.CountryName</span>
                                            }
                                        </span>
                                    </div>
                                </td>
                                <td>@(string.IsNullOrWhiteSpace(player.EsfMemberId) ? "-" : player.EsfMemberId)</td>
                                <td class="text-end">
                                    <a class="btn btn-sm btn-outline-primary" asp-area="Administration" asp-controller="Players" asp-action="Details" asp-route-id="@player.Id">Edit</a>
                                </td>
                            </tr>
                        }
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var countryFilter = document.getElementById('countryFilter');
            if (!countryFilter) return;

            countryFilter.value = '@Model.FilterCountry';

            countryFilter.addEventListener('change', function () {
                var url = new URL(window.location.href);

                if (countryFilter.value) {
                    url.searchParams.set('country', countryFilter.value);
                } else {
                    url.searchParams.delete('country');
                }

                window.location.href = url.toString();
            });
        });
    </script>
}
