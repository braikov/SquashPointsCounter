@model TournamentEditViewModel

@{
    ViewData["Title"] = "Create tournament";
}

<div class="card mb-4">
    <div class="card-header bg-primary bg-opacity-10">
        <strong>Create tournament</strong>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Tournaments" asp-area="Administration" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <div class="card">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Details</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-md-9 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                        <div class="col-md-3 mb-3">
                            <label asp-for="NationalityId" class="form-label"></label>
                            <select asp-for="NationalityId" asp-items="Model.Nationalities" class="form-select">
                                <option value="">-- Select Country --</option>
                            </select>
                            <span asp-validation-for="NationalityId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-lg mb-3">
                            <label asp-for="EntryOpensDate" class="form-label"></label>
                            <input asp-for="EntryOpensDate" class="form-control" type="date" />
                            <span asp-validation-for="EntryOpensDate" class="text-danger small"></span>
                        </div>

                        <div class="col-lg mb-3">
                            <label asp-for="ClosingSigninDate" class="form-label"></label>
                            <input asp-for="ClosingSigninDate" class="form-control" type="date" />
                            <span asp-validation-for="ClosingSigninDate" class="text-danger small"></span>
                        </div>

                        <div class="col-lg mb-3">
                            <label asp-for="WithdrawalDeadlineDate" class="form-label"></label>
                            <input asp-for="WithdrawalDeadlineDate" class="form-control" type="date" />
                            <span asp-validation-for="WithdrawalDeadlineDate" class="text-danger small"></span>
                        </div>

                        <div class="col-lg mb-3">
                            <label asp-for="StartDate" class="form-label"></label>
                            <input asp-for="StartDate" class="form-control" type="date" />
                            <span asp-validation-for="StartDate" class="text-danger small"></span>
                        </div>

                        <div class="col-lg mb-3">
                            <label asp-for="EndDate" class="form-label"></label>
                            <input asp-for="EndDate" class="form-control" type="date" />
                            <span asp-validation-for="EndDate" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-12 mb-3">
                            <label asp-for="Regulations" class="form-label"></label>
                            <div class="btn-toolbar mb-2" role="toolbar" aria-label="Regulations editor">
                                <div class="btn-group btn-group-sm me-2" role="group">
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="bold"><strong>B</strong></button>
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="italic"><em>I</em></button>
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="underline"><span style="text-decoration: underline;">U</span></button>
                                </div>
                                <div class="btn-group btn-group-sm me-2" role="group">
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="insertUnorderedList">â€¢ List</button>
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="insertOrderedList">1. List</button>
                                </div>
                                <div class="btn-group btn-group-sm" role="group">
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="createLink">Link</button>
                                    <button type="button" class="btn btn-outline-secondary" data-cmd="removeFormat">Clear</button>
                                </div>
                            </div>
                            <div id="RegulationsEditor" class="form-control" contenteditable="true" style="min-height: 200px;"></div>
                            <textarea asp-for="Regulations" class="form-control d-none" rows="8"></textarea>
                            <span asp-validation-for="Regulations" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Tournaments" asp-area="Administration" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            var form = document.querySelector('form');
            var editor = document.getElementById('RegulationsEditor');
            var input = document.getElementById('Regulations');
            var toolbar = document.querySelector('.btn-toolbar');
            if (!form || !editor || !input) {
                return;
            }

            editor.innerHTML = input.value || '';

            if (toolbar) {
                toolbar.addEventListener('click', function (event) {
                    var button = event.target.closest('button[data-cmd]');
                    if (!button) {
                        return;
                    }

                    var cmd = button.getAttribute('data-cmd');
                    if (!cmd) {
                        return;
                    }

                    if (cmd === 'createLink') {
                        var url = prompt('Enter URL');
                        if (url) {
                            document.execCommand(cmd, false, url);
                        }
                        return;
                    }

                    document.execCommand(cmd, false, null);
                });
            }

            form.addEventListener('submit', function () {
                input.value = editor.innerHTML.trim();
            });
        })();
    </script>
}
