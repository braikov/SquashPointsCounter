@model TournamentDrawsViewModel

@{
    var pageTitle = string.IsNullOrWhiteSpace(Model.EventName)
        ? $"{Model.TournamentName} - Draws"
        : $"{Model.TournamentName} - {Model.EventName} Draws";
    ViewData["Title"] = pageTitle;
}

<partial name="_TournamentTabs" model='new TournamentHeaderViewModel { Id = Model.TournamentId, Name = Model.TournamentName, ActiveTab = "Draws" }' />

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <strong>@pageTitle</strong>
        @if (!string.IsNullOrWhiteSpace(Model.EventName))
        {
            <a class="btn btn-sm btn-outline-secondary"
               asp-area="Administration"
               asp-controller="Tournaments"
               asp-action="Draws"
               asp-route-id="@Model.TournamentId">All Draws</a>
        }
    </div>
    <div class="card-body">
        @if (Model.Draws.Count == 0)
        {
            <p class="text-muted mb-0">No draws available.</p>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-striped align-middle">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Size</th>
                            <th>Type</th>
                        </tr>
                    </thead>
                    <tbody>
                    @foreach (var draw in Model.Draws)
                    {
                        <tr>
                            <td>
                                <a href="#" class="js-not-implemented" data-draw="@draw.Name">@draw.Name</a>
                            </td>
                            <td></td>
                            <td>@draw.Type</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
        }
    </div>
</div>

@if (!string.IsNullOrWhiteSpace(Model.EventName))
{
    <div class="card">
        <div class="card-header">
            <strong>Entries (@Model.Entries.Count)</strong>
        </div>
        <div class="card-body">
            @if (Model.Entries.Count == 0)
            {
                <p class="text-muted mb-0">No entries available.</p>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-striped align-middle">
                        <thead>
                            <tr>
                                <th>Player</th>
                                <th>Seed</th>
                            </tr>
                        </thead>
                        <tbody>
                        @foreach (var entry in Model.Entries)
                        {
                            <tr>
                                <td>
                                    @if (!string.IsNullOrWhiteSpace(entry.CountryCode))
                                    {
                                        <img src="@BuildFlagUrl(entry.CountryCode)"
                                             alt="@entry.CountryCode"
                                             width="20"
                                             height="14"
                                             class="me-2"
                                             loading="lazy" />
                                    }
                                    @entry.Name
                                </td>
                                <td></td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
}

@section Scripts {
    <script>
        (function () {
            document.querySelectorAll('.js-not-implemented').forEach(function (link) {
                link.addEventListener('click', function (event) {
                    event.preventDefault();
                    alert('not implemented');
                });
            });
        })();
    </script>
}

@functions {
    private static string BuildFlagUrl(string? nationalityCode)
    {
        if (string.IsNullOrWhiteSpace(nationalityCode))
        {
            return string.Empty;
        }

        return $"/images/flags/{nationalityCode.ToLowerInvariant()}.svg";
    }
}
