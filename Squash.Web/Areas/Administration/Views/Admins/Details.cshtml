@model AdminEditViewModel
@{
    ViewData["Title"] = "Edit admin";
}

<div class="card mb-4">
    <div class="card-header bg-primary bg-opacity-10">
        <strong>Edit admin</strong>
    </div>
    <div class="card-body">
        <form asp-action="Details" asp-controller="Admins" asp-area="Administration" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <div class="row gx-3">
                <div class="col-md-6 mb-3">
                    <label asp-for="Email" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text" aria-hidden="true">
                            <svg class="icon"><use xlink:href="/images/icons.svg#cil-envelope-open"></use></svg>
                        </span>
                        <input asp-for="Email" class="form-control" placeholder="admin@example.com" />
                    </div>
                    <span asp-validation-for="Email" class="text-danger small"></span>
                </div>

                <div class="col-md-3 mb-3">
                    <label class="form-label">Locked</label>
                    <div class="form-check form-switch ms-2">
                        <input asp-for="Locked" class="form-check-input" />
                        <label asp-for="Locked" class="form-check-label"></label>
                    </div>
                    <span class="text-muted small d-block">Prevent admin from signing in</span>
                </div>

                <div class="col-md-12 mb-2">
                    <small class="text-muted">To reset the admin's password, provide a new password and confirm it below.</small>
                </div>

                <input type="password" style="display:none" autocomplete="username" />
                <input type="password" style="display:none" autocomplete="current-password" />

                <div class="col-md-6 mb-3">
                    <label asp-for="NewPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text" aria-hidden="true">
                            <svg class="icon"><use xlink:href="/images/icons.svg#cil-lock-locked"></use></svg>
                        </span>
                        <input asp-for="NewPassword" class="form-control" placeholder="New password" autocomplete="new-password-@Model.Id" />
                    </div>
                    <span asp-validation-for="NewPassword" class="text-danger small"></span>
                </div>

                <div class="col-md-6 mb-3">
                    <label asp-for="ConfirmNewPassword" class="form-label"></label>
                    <div class="input-group">
                        <span class="input-group-text" aria-hidden="true">
                            <svg class="icon"><use xlink:href="/images/icons.svg#cil-lock-locked"></use></svg>
                        </span>
                        <input asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirm new password" autocomplete="new-password-@Model.Id" />
                    </div>
                    <span asp-validation-for="ConfirmNewPassword" class="text-danger small"></span>
                </div>
            </div>

            <div class="d-flex gap-2 mt-3">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Admins" asp-area="Administration" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
