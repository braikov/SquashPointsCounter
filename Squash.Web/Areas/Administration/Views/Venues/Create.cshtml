@model VenueEditViewModel

@{
    ViewData["Title"] = "Create venue";
}

<div class="card mb-4">
    <div class="card-header bg-primary bg-opacity-10">
        <strong>Create venue</strong>
    </div>
    <div class="card-body">
        <form asp-action="Create" asp-controller="Venues" asp-area="Administration" method="post" novalidate>
            @Html.AntiForgeryToken()

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Basic Info</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-12 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Address</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-12 mb-3">
                            <label asp-for="Street" class="form-label"></label>
                            <input asp-for="Street" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-md-3 mb-3">
                            <label asp-for="Zip" class="form-label"></label>
                            <input asp-for="Zip" class="form-control" />
                            <span asp-validation-for="Zip" class="text-danger small"></span>
                        </div>

                        <div class="col-md-5 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Region" class="form-label"></label>
                            <input asp-for="Region" class="form-control" />
                            <span asp-validation-for="Region" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CountryId" class="form-label"></label>
                            <select asp-for="CountryId" asp-items="Model.AvailableCountries" class="form-select">
                                <option value="">-- Select Country --</option>
                            </select>
                            <span asp-validation-for="CountryId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Latitude" class="form-label"></label>
                            <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
                            <span asp-validation-for="Latitude" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Longitude" class="form-label"></label>
                            <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
                            <span asp-validation-for="Longitude" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Contact</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" type="tel" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Website" class="form-label"></label>
                            <input asp-for="Website" class="form-control" type="url" />
                            <span asp-validation-for="Website" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Venues" asp-area="Administration" class="btn btn-secondary">Cancel</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
