@model VenueEditViewModel

@{
    ViewData["Title"] = "Edit venue";
}

<div class="card mb-4">
    <div class="card-header bg-primary bg-opacity-10">
        <strong>Edit venue</strong>
    </div>
    <div class="card-body">
        <form asp-action="Details" asp-controller="Venues" asp-area="Administration" method="post" novalidate>
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Basic Info</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-12 mb-3">
                            <label asp-for="Name" class="form-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Address</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-12 mb-3">
                            <label asp-for="Street" class="form-label"></label>
                            <input asp-for="Street" class="form-control" />
                            <span asp-validation-for="Street" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-md-3 mb-3">
                            <label asp-for="Zip" class="form-label"></label>
                            <input asp-for="Zip" class="form-control" />
                            <span asp-validation-for="Zip" class="text-danger small"></span>
                        </div>

                        <div class="col-md-5 mb-3">
                            <label asp-for="City" class="form-label"></label>
                            <input asp-for="City" class="form-control" />
                            <span asp-validation-for="City" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Region" class="form-label"></label>
                            <input asp-for="Region" class="form-control" />
                            <span asp-validation-for="Region" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="CountryId" class="form-label"></label>
                            <select asp-for="CountryId" asp-items="Model.AvailableCountries" class="form-select">
                                <option value="">-- Select Country --</option>
                            </select>
                            <span asp-validation-for="CountryId" class="text-danger small"></span>
                        </div>
                    </div>

                    <div class="row gx-3">
                        <div class="col-md-6 mb-3">
                            <label asp-for="Latitude" class="form-label"></label>
                            <input asp-for="Latitude" class="form-control" type="number" step="0.000001" />
                            <span asp-validation-for="Latitude" class="text-danger small"></span>
                        </div>

                        <div class="col-md-6 mb-3">
                            <label asp-for="Longitude" class="form-label"></label>
                            <input asp-for="Longitude" class="form-control" type="number" step="0.000001" />
                            <span asp-validation-for="Longitude" class="text-danger small"></span>
                        </div>
                    </div>

                    @if (Model.Latitude.HasValue && Model.Longitude.HasValue)
                    {
                        <div class="row gx-3">
                            <div class="col-12">
                                <a href="https://www.google.com/maps?q=@Model.Latitude,@Model.Longitude" target="_blank" class="btn btn-outline-secondary btn-sm">
                                    <i class="bi bi-geo-alt"></i> View on Google Maps
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10">
                    <strong>Contact</strong>
                </div>
                <div class="card-body">
                    <div class="row gx-3">
                        <div class="col-md-4 mb-3">
                            <label asp-for="Phone" class="form-label"></label>
                            <input asp-for="Phone" class="form-control" type="tel" />
                            <span asp-validation-for="Phone" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" type="email" />
                            <span asp-validation-for="Email" class="text-danger small"></span>
                        </div>

                        <div class="col-md-4 mb-3">
                            <label asp-for="Website" class="form-label"></label>
                            <input asp-for="Website" class="form-control" type="url" />
                            <span asp-validation-for="Website" class="text-danger small"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card mb-3">
                <div class="card-header bg-primary bg-opacity-10 d-flex justify-content-between align-items-center">
                    <strong>Courts</strong>
                    <button type="button" id="btnAddCourt" class="btn btn-sm btn-primary">
                        <i class="bi bi-plus-lg"></i> Add Court
                    </button>
                </div>
                <div class="card-body">
                    <div id="courtsContainer">
                        @for (int i = 0; i < Model.Courts.Count; i++)
                        {
                            <div class="row gx-3 mb-2 align-items-center court-row" id="court-row-@i">
                                <input type="hidden" name="Courts.Index" value="@i" />
                                <input type="hidden" asp-for="Courts[i].Id" />
                                <input type="hidden" asp-for="Courts[i].IsDeleted" class="is-deleted-input" />
                                
                                <div class="col-md-10">
                                    <div class="input-group">
                                        <span class="input-group-text"><i class="bi bi-aspect-ratio"></i></span>
                                        <input asp-for="Courts[i].Name" class="form-control" placeholder="Court Name" />
                                    </div>
                                    <span asp-validation-for="Courts[i].Name" class="text-danger small"></span>
                                </div>
                                <div class="col-md-2 text-end">
                                    <button type="button" class="btn btn-outline-danger btn-sm btn-remove-court" data-target="#court-row-@i">
                                        Remove
                                    </button>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary">Save</button>
                <a asp-action="Index" asp-controller="Venues" asp-area="Administration" class="btn btn-secondary">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const container = document.getElementById('courtsContainer');
            const btnAdd = document.getElementById('btnAddCourt');

            btnAdd.addEventListener('click', function () {
                const index = new Date().getTime(); // Unique index
                const html = `
                    <div class="row gx-3 mb-2 align-items-center court-row" id="court-row-${index}">
                        <input type="hidden" name="Courts.Index" value="${index}" />
                        <input type="hidden" name="Courts[${index}].Id" value="0" />
                        <input type="hidden" name="Courts[${index}].IsDeleted" value="false" class="is-deleted-input" />
                        
                        <div class="col-md-10">
                            <div class="input-group">
                                <span class="input-group-text"><i class="bi bi-aspect-ratio"></i></span>
                                <input name="Courts[${index}].Name" class="form-control" placeholder="Court Name" />
                            </div>
                        </div>
                        <div class="col-md-2 text-end">
                            <button type="button" class="btn btn-outline-danger btn-sm btn-remove-court" data-target="#court-row-${index}">
                                Remove
                            </button>
                        </div>
                    </div>
                `;
                container.insertAdjacentHTML('beforeend', html);
            });

            container.addEventListener('click', function (e) {
                if (e.target.classList.contains('btn-remove-court')) {
                    const rowId = e.target.getAttribute('data-target');
                    const row = document.querySelector(rowId);
                    if (row) {
                        const isDeletedInput = row.querySelector('.is-deleted-input');
                        if (isDeletedInput) {
                            isDeletedInput.value = 'true';
                        }
                        row.classList.add('d-none');
                    }
                }
            });
        });
    </script>
}
