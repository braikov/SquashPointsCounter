@model Squash.Web.Areas.Public.Models.MyTournamentsIndexViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Model.Title = Localizer["Title"].Value;
}

<div class="container py-4">
    <div class="d-flex flex-wrap align-items-center justify-content-between gap-2 mb-3">
        <div>
            <h1 class="h3 mb-1">@Localizer["Title"]</h1>
            <p class="text-body-secondary mb-0">@Localizer["Subtitle"]</p>
        </div>
        <a class="btn btn-primary" href="@Url.Action("Create", "MyTournaments", new { culture = Model.Culture })">
            @Localizer["CreateButton"]
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Items.Count == 0)
            {
                <div class="text-body-secondary">@Localizer["EmptyState"]</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table align-middle">
                        <thead>
                            <tr>
                                <th>@Localizer["Name"]</th>
                                <th>@Localizer["Dates"]</th>
                                <th>@Localizer["Status"]</th>
                                <th class="text-end">@Localizer["Actions"]</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.Items)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>
                                        <div>@item.StartDate?.ToString("d")</div>
                                        <div class="text-body-secondary">@item.EndDate?.ToString("d")</div>
                                    </td>
                                    <td>
                                        @if (item.IsPublished)
                                        {
                                            <span class="badge bg-success">@Localizer["Published"]</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@Localizer["Draft"]</span>
                                        }
                                    </td>
                                    <td class="text-end">
                                        <a class="btn btn-sm btn-outline-primary" href="@Url.Action("Edit", "MyTournaments", new { culture = Model.Culture, id = item.Id })">
                                            @Localizer["Edit"]
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
    </div>
</div>
