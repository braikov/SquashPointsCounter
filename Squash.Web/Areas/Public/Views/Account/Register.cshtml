@model Squash.Web.Areas.Public.Models.RegisterViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    Model.Title = Localizer["Title"].Value;
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card-group d-block d-md-flex row auth-card">
                <div class="card col-12 auth-left mb-0">
                    <div class="card-body">
                        <h1>@Localizer["Title"]</h1>

                        <form asp-action="Register" asp-controller="Account" asp-area="Public" asp-route-culture="@Model.Culture" method="post" class="mt-3">
                            @Html.AntiForgeryToken()
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger mb-3"></div>

                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">@Localizer["FirstName"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-user"></use></svg>
                                    </span>
                                    <input asp-for="FirstName" class="form-control" />
                                </div>
                                <span asp-validation-for="FirstName" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">@Localizer["LastName"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-user"></use></svg>
                                    </span>
                                    <input asp-for="LastName" class="form-control" />
                                </div>
                                <span asp-validation-for="LastName" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">@Localizer["Email"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-envelope-closed"></use></svg>
                                    </span>
                                    <input asp-for="Email" class="form-control" />
                                </div>
                                <span asp-validation-for="Email" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">@Localizer["Password"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-lock-locked"></use></svg>
                                    </span>
                                    <input asp-for="Password" class="form-control" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="ConfirmPassword" class="form-label">@Localizer["ConfirmPassword"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-lock-locked"></use></svg>
                                    </span>
                                    <input asp-for="ConfirmPassword" class="form-control" />
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="BirthDate" class="form-label">@Localizer["BirthDate"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-calendar"></use></svg>
                                    </span>
                                    <input asp-for="BirthDate" class="form-control" type="date" />
                                </div>
                                <span asp-validation-for="BirthDate" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Gender" class="form-label">@Localizer["Gender"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-people"></use></svg>
                                    </span>
                                    <select asp-for="Gender" class="form-select">
                                        <option value="">--</option>
                                        <option value="Male">@Localizer["GenderMale"]</option>
                                        <option value="Female">@Localizer["GenderFemale"]</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Gender" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="CountryId" class="form-label">@Localizer["Country"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-globe-alt"></use></svg>
                                    </span>
                                    <select asp-for="CountryId" asp-items="Model.Countries" class="form-select">
                                        <option value="">--</option>
                                    </select>
                                </div>
                                <span asp-validation-for="CountryId" class="text-danger small"></span>
                            </div>
                            <div class="mb-3">
                                <label asp-for="Sport" class="form-label">@Localizer["Sport"]</label>
                                <div class="input-group">
                                    <span class="input-group-text">
                                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-tennis"></use></svg>
                                    </span>
                                    <select asp-for="Sport" class="form-select">
                                        <option value="Squash">@Localizer["SportSquash"]</option>
                                    </select>
                                </div>
                                <span asp-validation-for="Sport" class="text-danger small"></span>
                            </div>

                            <div class="row mt-4">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-4">@Localizer["RegisterButton"]</button>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
