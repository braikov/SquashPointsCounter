@{
    Layout = null;
}
<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Referee More</title>
    <link rel="stylesheet" href="~/css/kiosk/referee-more.css" />
</head>
<body>
    <main class="screen">
        <a class="panel back-button" href="/kiosk/referee">Back to match</a>

        <section class="panel action-button">Lock match</section>
        <section class="double-row">
            <section class="panel action-button">Injury timeout A</section>
            <section class="panel action-button">Injury timeout B</section>
        </section>
        <section class="panel action-button">Equipment issue</section>
        <section class="double-row">
            <section class="panel action-button">A retires</section>
            <section class="panel action-button">B retires</section>
        </section>
        <section class="double-row">
            <section class="panel action-button">A request review (2 left)</section>
            <section class="panel action-button">B request review (2 left)</section>
        </section>
        <section class="double-row">
            <section class="panel action-button">Warning A</section>
            <section class="panel action-button">Warning B</section>
        </section>

        <section class="double-row">
            <section class="panel action-button">Conduct stroke A</section>
            <section class="panel action-button">Conduct stroke B</section>
        </section>
    </main>
</body>
</html>
