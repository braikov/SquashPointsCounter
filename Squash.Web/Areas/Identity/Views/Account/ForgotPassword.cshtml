@model Squash.Web.Areas.Identity.Models.Account.ForgotPasswordViewModel
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["Title"].Value;
}

<div class="card-group d-block d-md-flex row auth-card">
    <div class="card col-md-7 auth-left mb-0">
        <div class="card-body">
            <h1>@Localizer["Heading"]</h1>
            <p class="text-body-secondary">@Localizer["Subtitle"]</p>

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="ForgotPassword" asp-controller="Account" asp-area="Identity" method="post" class="mt-3">
                @Html.AntiForgeryToken()

                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-envelope-closed"></use></svg>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="@Localizer["EmailPlaceholder"]" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>

                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary px-4">@Localizer["SendButton"]</button>
                    </div>
                </div>

                <input asp-for="ReturnUrl" type="hidden" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
