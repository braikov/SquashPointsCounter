@model Squash.Web.Areas.Identity.Models.Account.LoginViewModel

@{
    ViewData["Title"] = "Login";
    var accessDeniedMsg = TempData["AccessDeniedMessage"] as string;
}

<div class="card-group d-block d-md-flex row auth-card">
    <div class="card col-md-7 auth-left mb-0">
        <div class="card-body">
            <h1>Login</h1>
            <p class="text-body-secondary">Sign in to your account</p>

            @if (!string.IsNullOrEmpty(accessDeniedMsg))
            {
                <div class="alert alert-warning">
                    <strong>Access denied.</strong> @accessDeniedMsg
                </div>
            }

            <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

            <form asp-action="Login" asp-controller="Account" asp-area="Identity" method="post" class="mt-3">
                @Html.AntiForgeryToken()

                <div class="input-group mb-3">
                    <span class="input-group-text">
                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-user"></use></svg>
                    </span>
                    <input asp-for="Email" class="form-control" placeholder="Email" />
                </div>
                <span asp-validation-for="Email" class="text-danger small"></span>

                <div class="input-group mb-4">
                    <span class="input-group-text">
                        <svg class="icon"><use xlink:href="/images/icons.svg#cil-lock-locked"></use></svg>
                    </span>
                    <input asp-for="Password" class="form-control" placeholder="Password" />
                </div>
                <span asp-validation-for="Password" class="text-danger small"></span>

                <div class="row">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary px-4">Login</button>
                    </div>
                    <div class="col-6 text-end">
                        <a asp-action="ForgotPassword" asp-controller="Account" asp-area="Identity" class="btn btn-link px-0">Forgot password?</a>
                    </div>
                </div>

                <input asp-for="ReturnUrl" type="hidden" />
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
